#!/usr/bin/env node

var bot = require('../js/bot.js');

function runScheduledTask() {
  var date = new Date().getDate();
  switch (date) {
    case 1: bot.purge(); console.log("Purge run on " + date); break;
    case 28: break;
    default: console.log("Scheduler ran on " + date); break;
  }
}

runScheduledTask();
