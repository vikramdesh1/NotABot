#!/usr/bin/env node

var bot = require('../js/bot.js');

function runScheduledTask() {
  bot.purge();
  bot.sendPurgeWarning();
  var date = new Date().getDate();
  switch (date) {
    case 1: bot.purge(); break;
    case 28: bot.sendPurgeWarning(); break;
    default: console.log("Today's date is " + date); break;
  }
}

runScheduledTask();
